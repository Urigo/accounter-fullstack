{
  "name": "accounter-monorepo",
  "type": "module",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "packageManager": "yarn@4.10.3",
  "engines": {
    "node": "24.11.0"
  },
  "scripts": {
    "build": "yarn generate && yarn build:tools && yarn build:main",
    "build:main": "yarn workspaces foreach --all --parallel --include @accounter/client --include @accounter/server run build",
    "build:tools": "yarn workspaces foreach --all --parallel --exclude @accounter/client --exclude @accounter/server --exclude accounter-monorepo run build",
    "db:migrate": "yarn migration:run",
    "deploy": "git push heroku master",
    "encrypt-password": "node scripts/encrypt-password.mjs",
    "generate": "concurrently -c blue,green -n GraphQL,SQL \"yarn generate:graphql\" \"yarn generate:sql\"",
    "generate:all": "yarn generate",
    "generate:graphql": "yarn generate:graphql:clear; graphql-codegen",
    "generate:graphql:clear": "rimraf schema.graphql packages/server/**/__generated__/types.ts packages/client/src/gql/",
    "generate:watch": "concurrently -c blue,green -n GraphQL,SQL \"yarn generate:graphql --watch\" \"yarn generate:sql:watch\"",
    "graphql:coverage": "yarn graphql-inspector coverage './packages/client/src/**/*.{ts,tsx}' './schema.graphql'",
    "graphql:validate": "yarn graphql-inspector validate './packages/client/src/**/*.{ts,tsx}' './schema.graphql'",
    "lint": "eslint --cache --cache-location node_modules/.cache/.eslintcache .",
    "local:setup": "docker-compose -f ./docker/docker-compose.dev.yml up -d --wait && yarn setup",
    "mesh:artifacts-rename": "yarn node ./scripts/mesh-artifacts-rename.mjs",
    "pre-commit": "lint-staged",
    "prettier:check": "prettier --cache --check .",
    "prettier:fix": "prettier --cache --write --list-different .",
    "release": "yarn build && changeset publish",
    "scrape": "yarn workspace @accounter-helper/scraper-local-app start",
    "seed": "tsx scripts/seed.ts",
    "setup": "yarn db:init && yarn generate",
    "test": "vitest"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.7",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.39.0",
    "@graphql-codegen/cli": "6.0.1",
    "@graphql-codegen/client-preset": "5.1.1",
    "@graphql-codegen/graphql-modules-preset": "5.0.3",
    "@graphql-codegen/schema-ast": "5.0.0",
    "@graphql-codegen/typescript": "5.0.2",
    "@graphql-codegen/typescript-resolvers": "4.5.2",
    "@graphql-eslint/eslint-plugin": "4.4.0",
    "@graphql-hive/cli": "0.52.0",
    "@graphql-inspector/cli": "5.0.8",
    "@parcel/watcher": "2.5.1",
    "@pgtyped/cli": "2.4.3",
    "@pgtyped/runtime": "2.4.2",
    "@theguild/eslint-config": "0.13.4",
    "@theguild/prettier-config": "3.0.1",
    "@types/node": "24.9.2",
    "@types/pg": "8.15.6",
    "bob-the-bundler": "7.0.1",
    "concurrently": "9.2.1",
    "dotenv": "17.2.3",
    "eslint": "9.39.0",
    "eslint-config-flat-gitignore": "2.1.0",
    "eslint-plugin-unicorn": "62.0.0",
    "glob": "11.0.3",
    "globals": "16.5.0",
    "graphql": "16.12.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.6",
    "pg": "8.16.3",
    "prettier": "3.6.2",
    "prettier-plugin-sql": "0.19.2",
    "rimraf": "6.1.0",
    "ts-node": "10.9.2",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "resolutions": {
    "@slonik/pg-driver@npm:^48.4.1": "patch:@slonik/pg-driver@npm%3A48.4.1#~/.yarn/patches/@slonik-pg-driver-npm-48.4.1-79145eeaac.patch",
    "graphql": "16.12.0"
  },
  "lint-staged": {
    "*.--write": "prettier --write"
  },
  "puppeteer": {
    "skipDownload": true
  }
}
