{
  "name": "accounter-monorepo",
  "type": "module",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "client",
      "server",
      "old-accounter",
      "etherscan-scrapper",
      "kraken-scrapper",
      "etana-scrapper"
    ]
  },
  "engines": {
    "node": "20.5.0"
  },
  "scripts": {
    "build": "concurrently \"yarn client:build\" \"yarn server:build\" \"yarn old-accounter:build\"",
    "client:build": "yarn --cwd client build",
    "client:dev": "yarn --cwd client dev",
    "codegen": "graphql-codegen --config codegen.yml",
    "deploy": "git push heroku master",
    "dev": "yarn --cwd old-accounter dev",
    "generate": "concurrently -c blue,green -n codegen,sqlgen \"yarn codegen\" \"yarn --cwd server sqlgen\"",
    "get": "yarn --cwd old-accounter get",
    "graphql:coverage": "yarn graphql-inspector coverage './client/src/**/*.{ts,tsx}' './schema.graphql'",
    "graphql:validate": "yarn graphql-inspector validate './client/src/**/*.{ts,tsx}' './schema.graphql'",
    "lint": "eslint --cache --cache-location node_modules/.cache/.eslintcache --ignore-path .gitignore .",
    "month": "yarn --cwd old-accounter month",
    "old-accounter:build": "yarn --cwd old-accounter build",
    "old-accounterdev": "yarn --cwd old-accounter dev",
    "postinstall": "patch-package",
    "precodegen": "rimraf schema.graphql server/**/__generated__/types.ts client/src/gql/",
    "prettier:check": "prettier --cache --ignore-path .gitignore --check .",
    "prettier:fix": "prettier --cache --ignore-path .gitignore --write --list-different --ignore-unknown \"**/*\"",
    "scrape": "yarn --cwd old-accounter scrape",
    "server:build": "yarn --cwd server build",
    "server:dev": "yarn --cwd server dev",
    "start": "yarn --cwd old-accounter start",
    "test": "vitest"
  },
  "dependencies": {
    "graphql": "16.7.1",
    "graphql-scalars": "1.22.2",
    "patch-package": "8.0.0",
    "postinstall-postinstall": "2.1.0"
  },
  "devDependencies": {
    "@graphql-codegen/add": "5.0.0",
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/client-preset": "4.1.0",
    "@graphql-codegen/graphql-modules-preset": "4.0.1",
    "@graphql-codegen/schema-ast": "4.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@graphql-eslint/eslint-plugin": "3.20.1",
    "@graphql-inspector/cli": "4.0.2",
    "@theguild/eslint-config": "0.11.0",
    "@theguild/prettier-config": "2.0.0",
    "@types/node": "20.4.5",
    "bob-the-bundler": "7.0.1",
    "concurrently": "8.2.0",
    "eslint": "8.46.0",
    "prettier": "3.0.0",
    "prettier-plugin-sql": "0.15.1",
    "typescript": "5.1.6",
    "vite-tsconfig-paths": "4.2.0",
    "vitest": "0.33.0"
  },
  "resolutions": {
    "": "urql resolution due to @urql/exchange-multipart-fetch mismatch",
    "@urql/core": "^4.1.0"
  }
}
