{
  "name": "accounter-monorepo",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "old-accounter",
    "temp-server"
  ],
  "type": "module",
  "scripts": {
    "start": "yarn --cwd old-accounter start",
    "build": "concurrently \"yarn client:build\" \"yarn server:build\" \"yarn old-accounter:build\" \"yarn temp-server:build\"",
    "client:build": "yarn --cwd client build",
    "server:build": "yarn --cwd server build",
    "temp-server:build": "yarn --cwd temp-server build",
    "old-accounter:build": "yarn --cwd old-accounter build",
    "dev": "yarn --cwd old-accounter dev",
    "client:dev": "yarn --cwd client dev",
    "server:dev": "yarn --cwd server dev",
    "temp-server:dev": "yarn --cwd temp-server dev",
    "old-accounterdev": "yarn --cwd old-accounter dev",
    "scrape": "yarn --cwd old-accounter scrape",
    "month": "yarn --cwd old-accounter month",
    "get": "yarn --cwd old-accounter get",
    "deploy": "git push heroku master",
    "lint": "eslint --ignore-path .gitignore .",
    "prettier": "prettier --ignore-path .gitignore --write --list-different .",
    "lint:prettier": "prettier --ignore-path .gitignore --check .",
    "sqlgen": "npx pgtyped -c pgTypedConfig.json",
    "codegen": "graphql-codegen --config codegen.yml",
    "generate": "concurrently \"yarn codegen\" \"yarn --cwd server sqlgen\""
  },
  "dependencies": {
    "graphql": "16.5.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.11.3",
    "@graphql-codegen/introspection": "2.2.0",
    "@graphql-codegen/typescript": "2.7.2",
    "@graphql-codegen/typescript-operations": "2.5.2",
    "@graphql-codegen/typescript-react-query": "4.0.0",
    "@graphql-codegen/typescript-resolvers": "2.7.2",
    "@graphql-eslint/eslint-plugin": "3.10.7",
    "@theguild/eslint-config": "0.0.1",
    "@theguild/prettier-config": "0.0.2",
    "@types/node": "18.6.3",
    "concurrently": "7.3.0",
    "eslint": "8.20.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "prettier": "2.7.1",
    "prettier-plugin-sql": "0.10.2",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": "18.12.0"
  },
  "license": "MIT"
}
