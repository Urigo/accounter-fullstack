{
  "name": "accounter-monorepo",
  "type": "module",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "client",
      "server",
      "old-accounter",
      "etherscan-scrapper",
      "kraken-scrapper",
      "etana-scrapper"
    ]
  },
  "engines": {
    "node": "20.5.0"
  },
  "scripts": {
    "build": "concurrently \"yarn client:build\" \"yarn server:build\" \"yarn old-accounter:build\"",
    "client:build": "yarn --cwd client build",
    "client:dev": "yarn --cwd client dev",
    "codegen": "graphql-codegen --config codegen.yml",
    "deploy": "git push heroku master",
    "dev": "yarn --cwd old-accounter dev",
    "generate": "concurrently -c blue,green -n codegen,sqlgen \"yarn codegen\" \"yarn --cwd server sqlgen\"",
    "get": "yarn --cwd old-accounter get",
    "lint": "eslint --cache --cache-location node_modules/.cache/.eslintcache --ignore-path .gitignore .",
    "lint:prettier": "prettier --cache --ignore-path .gitignore --check .",
    "month": "yarn --cwd old-accounter month",
    "old-accounter:build": "yarn --cwd old-accounter build",
    "old-accounterdev": "yarn --cwd old-accounter dev",
    "postinstall": "patch-package",
    "precodegen": "rimraf **/__generated__/types.ts",
    "prettier": "prettier --cache --ignore-path .gitignore --write --list-different --ignore-unknown \"**/*\"",
    "scrape": "yarn --cwd old-accounter scrape",
    "server:build": "yarn --cwd server build",
    "server:dev": "yarn --cwd server dev",
    "start": "yarn --cwd old-accounter start",
    "test": "vitest"
  },
  "dependencies": {
    "graphql": "16.7.1",
    "graphql-scalars": "1.22.2",
    "patch-package": "7.0.0",
    "postinstall-postinstall": "2.1.0"
  },
  "devDependencies": {
    "@graphql-codegen/add": "4.0.1",
    "@graphql-codegen/cli": "3.3.1",
    "@graphql-codegen/client-preset": "3.0.1",
    "@graphql-codegen/graphql-modules-preset": "3.1.3",
    "@graphql-codegen/schema-ast": "3.0.1",
    "@graphql-codegen/typescript": "3.0.4",
    "@graphql-codegen/typescript-resolvers": "3.2.1",
    "@graphql-eslint/eslint-plugin": "3.18.0",
    "@theguild/eslint-config": "0.9.0",
    "@theguild/prettier-config": "1.1.3",
    "@types/node": "20.1.5",
    "bob-the-bundler": "6.0.0",
    "concurrently": "8.0.1",
    "eslint": "8.40.0",
    "prettier": "2.8.8",
    "prettier-plugin-sql": "0.14.0",
    "typescript": "5.0.4",
    "vite-tsconfig-paths": "4.2.0",
    "vitest": "0.31.0"
  }
}
