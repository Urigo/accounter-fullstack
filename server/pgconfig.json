{
  "transforms": [
    {
      "mode": "sql",
      "include": "**/*.sql",
      "emitTemplate": "{{dir}}/../generated-types/{{name}}.types.mts"
    },
    {
      "mode": "ts",
      "include": "**/providers/**/*.mts",
      "emitTemplate": "{{dir}}/../generated-types/{{name}}.types.mts"
    }
  ],
  "srcDir": "./src/",
  "failOnError": true,
  "camelCaseColumnNames": false,
  "dbUrl": "url.com",
  "db": {
    "ssl": {
      "rejectUnauthorized": false
    }
  }
}
