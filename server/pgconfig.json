{
    "transforms": [
      {
        "mode": "sql",
        "include": "**/*.sql",
        "emitTemplate": "{{dir}}/{{name}}.queries.ts"
      },
      {
        "mode": "ts",
        "include": "**/sqlQueries.mts",
        "emitTemplate": "src/__generated__/{{name}}.types.mts"
      }
    ],
    "srcDir": "./src/",
    "failOnError": true,
    "camelCaseColumnNames": false,
    "dbUrl": "url.com",
    "db": {
      "ssl": {
        "rejectUnauthorized": false
      }
    }
  }