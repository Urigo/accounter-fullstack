    "@pgtyped/query": "1.0.1",
    "currency.js": "2.0.4",
    "dataloader": "2.1.0",
    "date-fns": "2.29.1",
    "dotenv": "16.0.1",
    "dotenv-cli": "6.0.0",
    "fastify": "4.3.0",
    "graphql": "16.5.0",
    "pg": "8.7.3"
  },
  "engines": {
    "node": "18.12.1"
