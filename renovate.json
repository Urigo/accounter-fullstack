{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>the-guild-org/shared-config:renovate"
  ],
  "automerge": false,
  "patch": {
    "automerge": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "prConcurrentLimit": 10,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "groupName": "all patch dependencies",
      "groupSlug": "all-patch",
      "matchPackageNames": [
        "!/@changesets/*/",
        "!/typescript/",
        "!/^@theguild//",
        "*"
      ]
    },
    {
      "groupName": "Yoga/Envelop",
      "matchPackageNames": [
        "@envelop/{/,}**",
        "graphql-yoga{/,}**",
        "@graphql-yoga/{/,}**"
      ]
    },
    {
      "groupName": "urql",
      "recreateWhen": "auto",
      "matchPackageNames": [
        "@urql/{/,}**",
        "urql{/,}**"
      ]
    }
  ]
}
