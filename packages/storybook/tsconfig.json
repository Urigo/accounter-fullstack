{
  "extends": "../client/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "rootDir": "..",
    "outDir": "./dist",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["react", "react-dom"],
    "paths": {
      "@accounter/client": ["../client/src"],
      "@accounter/client/*": ["../client/src/*"]
    }
  },
  "include": [
    ".storybook/**/*",
    "stories/**/*",
    "src/**/*",
    "../client/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "storybook-static"
  ]
}