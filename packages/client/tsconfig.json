{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",

    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "useDefineForClassFields": true,
    "allowJs": false,
    "esModuleInterop": false,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["client/vite.config.ts", "src/**/*", "client/**/*", "server/**/*"],
  "references": [{ "path": "tsconfig.node.json" }]
}
