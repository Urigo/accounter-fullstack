{
  "name": "@accounter-helper/migrations",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "exit 0",
    "db:create": "node tools/create-db.mjs",
    "db:init": "yarn db:create && yarn migration:run",
    "db:migrator": "node --experimental-specifier-resolution=node --import ../../scripts/register-esm.js src/index.ts",
    "migration:run": "yarn slonik-fix && yarn db:migrator up",
    "slonik-fix": "node --experimental-specifier-resolution=node --import ../../scripts/register-esm.js tools/slonik-fix.ts"
  },
  "devDependencies": {
    "@types/pg": "8.15.5",
    "got": "14.4.7",
    "pg-promise": "11.15.0",
    "slonik": "48.3.0",
    "tslib": "2.8.1",
    "zod": "3.25.76"
  }
}
