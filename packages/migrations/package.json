{
  "name": "@accounter-helper/migrations",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "private": true,
  "files": [
    "src",
    "tsconfig.json"
  ],
  "scripts": {
    "build": "exit 0",
    "db:create": "node tools/create-db.mjs",
    "db:init": "yarn db:create && yarn migration:run",
    "db:migrator": "node --experimental-specifier-resolution=node --loader ts-node/esm src/index.ts",
    "migration:run": "yarn db:migrator up"
  },
  "devDependencies": {
    "@types/node": "20.11.25",
    "@types/pg": "8.11.2",
    "dotenv": "16.4.5",
    "got": "14.2.1",
    "pg-promise": "11.5.4",
    "slonik": "30.4.4",
    "ts-node": "10.9.2",
    "tslib": "2.6.2",
    "typescript": "5.4.2",
    "zod": "3.22.4"
  },
  "buildOptions": {
    "external": [
      "pg-native"
    ]
  }
}
