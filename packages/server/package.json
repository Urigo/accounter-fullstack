{
  "name": "@accounter/server",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "license": "MIT",
  "engines": {
    "node": "21.3.0"
  },
  "main": "./src/index.mts",
  "scripts": {
    "build": "tsc && tsc-alias",
    "build2": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "dev": "nodemon --exec \"yarn start | pino-pretty\" --ignore dist --watch 'src/**/*' -e ts,tsx,mts",
    "generate": "cd ../.. && yarn codegen && cd server && yarn sqlgen",
    "pgtyped": "DATABASE_URL=$(node scripts/set-db-url.cjs) pgtyped -c pgconfig.json",
    "presqlgen": "rimraf **/__generated__/*.types.ts",
    "prestart": "yarn build",
    "sqlgen": "dotenv -e ../../.env yarn pgtyped",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@accounter-toolkit/green-invoice-graphql": "0.5.2",
    "@accounter-toolkit/pcn874-generator": "0.3.0",
    "@envelop/generic-auth": "7.0.0",
    "@envelop/graphql-modules": "6.0.0",
    "@graphql-yoga/node": "3.9.1",
    "@graphql-yoga/plugin-defer-stream": "3.1.1",
    "@pgtyped/cli": "2.3.0",
    "@pgtyped/runtime": "2.3.0",
    "basic-auth": "2.0.1",
    "bcrypt": "5.1.1",
    "cloudinary": "1.41.3",
    "dataloader": "2.2.2",
    "date-fns": "3.3.1",
    "dotenv": "16.4.0",
    "dotenv-cli": "7.3.0",
    "graphql": "16.8.1",
    "graphql-modules": "2.3.0",
    "graphql-yoga": "5.1.1",
    "pg": "8.11.3",
    "reflect-metadata": "0.2.1"
  },
  "devDependencies": {
    "@types/basic-auth": "1.1.8",
    "@types/bcrypt": "5.0.2",
    "@types/pg": "8.10.9",
    "nodemon": "3.0.3",
    "pino-pretty": "10.3.1",
    "tsc-alias": "1.8.8"
  }
}
