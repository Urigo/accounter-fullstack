{
  "name": "@accounter/server",
  "version": "0.0.4",
  "type": "module",
  "description": "",
  "license": "MIT",
  "main": "./src/index.mts",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "nodemon --exec \"yarn start | pino-pretty\" --ignore dist --watch 'src/**/*' -e ts,tsx,mts",
    "generate": "yarn generate:all",
    "generate:sql": "dotenv -e ../../.env yarn pgtyped",
    "generate:sql:watch": "dotenv -e ../../.env yarn pgtyped:watch",
    "pgtyped": "yarn rimraf **/__generated__/*.types.ts; DATABASE_URL=$(node scripts/set-db-url.cjs) pgtyped -c $(node scripts/generate-local-pgconfig.cjs)",
    "pgtyped:watch": "yarn pgtyped -w",
    "server:dev": "yarn dev",
    "start": "yarn build && node dist/server/src/index.js"
  },
  "dependencies": {
    "@accounter/green-invoice-graphql": "workspace:^",
    "@accounter/pcn874-generator": "workspace:^",
    "@ai-sdk/anthropic": "1.2.12",
    "@envelop/generic-auth": "9.1.3",
    "@envelop/graphql-modules": "7.1.3",
    "@graphql-hive/yoga": "0.42.1",
    "@graphql-yoga/plugin-defer-stream": "3.13.5",
    "@pgtyped/cli": "2.4.3",
    "@pgtyped/runtime": "2.4.2",
    "@whatwg-node/fetch": "0.10.8",
    "ai": "4.3.16",
    "basic-auth": "2.0.1",
    "bcrypt": "6.0.0",
    "cloudinary": "2.6.1",
    "dataloader": "2.2.3",
    "date-fns": "4.1.0",
    "dotenv": "16.5.0",
    "dotenv-cli": "8.0.0",
    "graphql": "16.11.0",
    "graphql-modules": "3.0.0",
    "graphql-scalars": "1.24.2",
    "graphql-yoga": "5.13.5",
    "node-cache": "5.1.2",
    "node-xlsx": "0.24.0",
    "pg": "8.16.0",
    "reflect-metadata": "0.2.2",
    "strip-indent": "4.0.0",
    "zod": "3.25.30"
  },
  "devDependencies": {
    "@types/basic-auth": "1.1.8",
    "@types/bcrypt": "5.0.2",
    "@types/pg": "8.15.2",
    "nodemon": "3.1.10",
    "pino-pretty": "13.0.0",
    "rimraf": "6.0.1",
    "tsc-alias": "1.8.16",
    "typescript": "5.8.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  }
}
