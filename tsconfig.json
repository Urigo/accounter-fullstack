{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["vitest/globals"],

    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,

    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,

    "allowJs": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,
    "jsx": "preserve",

    "paths": {
      "@accounter/modern-poalim-scraper": ["packages/modern-poalim-scraper/src/index"]
    }
  },
  "exclude": ["**/node_modules", "**/dist"]
}
