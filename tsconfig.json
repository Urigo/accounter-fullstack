{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["vitest/globals"],

    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,

    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,

    "allowJs": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,
    "jsx": "preserve",

    "paths": {
      "@accounter/modern-poalim-scraper": ["packages/modern-poalim-scraper/src/index"],
      "@accounter/green-invoice-graphql": ["packages/green-invoice-graphql/src/"],
      "@accounter/hashavshevet-mesh": ["packages/hashavshevet-mesh/src/"],
      "@accounter/israeli-vat-scraper": ["packages/israeli-vat-scraper/src/"],
      "@accounter/payper-mesh": ["packages/payper-mesh/src/"],
      "@accounter/pcn874-generator": ["packages/pcn874-generator/src/"]
    }
  },
  "exclude": ["**/node_modules", "**/dist"]
}
